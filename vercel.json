{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "npm install",
  "framework": null,
  "functions": {
    "api/index.ts": {
      "includeFiles": [
        "server/**/*.ts",
        "shared/**/*.ts"
      ]
    },
    "api/trading-cycle.ts": {
      "includeFiles": [
        "server/**/*.ts",
        "shared/**/*.ts"
      ]
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index"
    }
  ],
  "crons": [
    {
      "path": "/api/trading-cycle",
      "schedule": "*/2 * * * *"
    }
  ]
}

